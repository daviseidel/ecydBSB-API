<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name),
              class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
  %><br/>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu a senha?", new_membro_password_path(resource_name),
              class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
  %> <br/>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Inscreva-se", new_registration_path(resource_name),
                class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
    %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu as informações de confirmação?", new_membro_confirmation_path(resource_name),
              class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
  %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu as informações de desbloqueio?", new_membro_unlock_path(resource_name),
              class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
  %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),
                class: "inline-block align-baseline font-bold text-sm text-zinc-500 hover:text-zinc-800"
    %><br />
  <% end %>
<% end %>