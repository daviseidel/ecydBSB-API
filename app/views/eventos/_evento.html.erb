<div id="<%= dom_id evento %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Titulo:</strong>
    <%= evento.titulo %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Data:</strong>
    <%= evento.data %>
  </p>


  <% if action_name != "show" %>
    <%= link_to "Detalhes", evento, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Editar", edit_evento_path(evento), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
